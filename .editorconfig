# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
# This setting ensures that this is the root EditorConfig file and no other
# EditorConfig files outside of this directory will be used.
root = true

# Default settings for all files
# These settings apply to all files unless overridden by more specific settings.
[*]
# Set the character encoding to UTF-8.
charset = utf-8
# Use LF (Line Feed) as the line ending.
end_of_line = lf
# Ensure that files end with a newline.
insert_final_newline = true
# Remove any trailing whitespace characters.
trim_trailing_whitespace = true
# Use spaces for indentation.
indent_style = space
# Set the number of spaces per indentation level.
indent_size = 4

# .gitignore files
# Specific settings for .gitignore files.
[*.gitignore]
# Set the character encoding to UTF-8.
charset = utf-8
# Use LF (Line Feed) as the line ending.
end_of_line = lf
# Ensure that files end with a newline.
insert_final_newline = true
# Remove any trailing whitespace characters.
trim_trailing_whitespace = true
# Use spaces for indentation.
indent_style = space
# Set the number of spaces per indentation level.
indent_size = 4

# Go files
